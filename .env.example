# SurrealDB Cloud Configuration
# Copy this file to .env and fill in your credentials

# Required: Your SurrealDB Cloud WebSocket endpoint
# Find this in your SurrealDB Cloud dashboard
SURREALDB_ENDPOINT=wss://YOUR_INSTANCE_ID.aws-use1.surrealdb.cloud

# Required: Database user credentials
# Create a database user at https://app.surrealdb.com/c/YOUR_ORG/authentication
SURREALDB_USERNAME=your_username
SURREALDB_PASSWORD=your_password

# Optional: Custom namespace and database (defaults shown)
SURREALDB_NAMESPACE=aivcs
SURREALDB_DATABASE=main

# Optional: Set to "true" if using root credentials instead of database user
# SURREALDB_ROOT=false
